<div class="row column">
  <hr>
</div>

<div class="row column">
  <p class="lead">Nomad Approved Housing
</div>

<div class="row column">
  <ul class="tabs" data-tabs id="example-tabs">
    <li class="tabs-title is-active"><a href="#panel1" aria-selected="true"><i class="fa fa-th"></i></a></li>
    <li class="tabs-title"><a href="#panel2"><i class="fa fa-th-list"></i></a></li>
  </ul>
</div>

<div class="tabs-content " data-tabs-content="example-tabs">
  <div class="tabs-panel is-active" id="panel1"> 
    <div class="row small-up-1 medium-up-2 large-up-3" data-equalizer data-equalize-on="medium" id="test-eq">
      <% @submissions.each do |submission| %>
        <div class="column">
          <div class="callout" data-equalizer-watch>
            <p><%= submission.location %></p>

            <p><img src="http://placehold.it/250x200"></p>

            <!--<p><img src="<%= submission.img1 %>" ></p>-->

            <p class="lead"><%= link_to submission.id, submission %></p>
            <p class="subheader"><%= submission.bedrooms %></td> Bed <%= submission.bathrooms %></td> Bath <%= submission.lodging_type %></p>
          </div>
        </div>
      <% end %>
    </div>   
  </div>

  <div class="tabs-panel" id="panel2">
    <div class="row column">
      <table>
        <thead>
          <tr>
            <th>Listing</th>
            <th>Location</th>
            <th>Lodging Type</th>
            <th>Bedrooms</th>
            <th>Bathrooms</th>
            <th>Published</th>
            <th>User</th>
          </tr>
        </thead>

      <% @submissions.each do |submission| %>
        <tbody>
          <tr>
            <td><%= link_to submission.title, submission %></td>
            <td><%= submission.location %></td>
            <td><%= submission.lodging_type %></td>
            <td><%= submission.bedrooms %></td>
            <td><%= submission.bathrooms %></td>
            <td><%= submission.publish %></td>
            <td><%= submission.user_id %></td>
          </tr>
        </tbody>
      <% end %>
    </table>
    </div>
    
  </div>
</div>



